{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "next-env.d.ts",
    "lib/plasmic.ts",
    "lib/storage/**",
    "lib/objectstore/**",
    "lib/backend/**",
    "lib/redis.ts",
    "lib/stripeGuard.ts",
    "lib/phiZero.ts",
    "lib/adapters/**",
    "llm/**",
    "middleware.ts",
    "middleware/**",
    "app/api/**",
    "app/plasmic/**",
    "app/plasmic-host/**",
    "components/plasmic.registry.tsx",
    "app/layout.tsx",
    "tests/**"
  ]
}
