{
  "name": "earlybird-monorepo",
  "private": true,
  "version": "1.0.1",
  "packageManager": "npm@10",
  "overrides": {
    "ws": "8.17.1"
  },
  "scripts": {
    "check:inline": "bash scripts/security/inline_check.sh .",
    "check:routes": "bash scripts/security/route_runtime_check.sh .",
    "check:headers": "node scripts/headers_check.mjs",
    "check:http": "bash scripts/security/no_http_urls.sh .",
    "smoke:ratelimit": "bash scripts/smokes/ratelimit.sh $PREVIEW_URL",
    "security:local": "bash scripts/security/gitleaks_scan.sh . && bash scripts/security/semgrep_scan.sh . && bash scripts/security/trivy_fs.sh .",
    "build": "npm --prefix apps/web run build",
    "dev": "concurrently -n api,web -c yellow,cyan \"pnpm -C apps/api dev\" \"pnpm -C apps/web dev\"",
    "check:policy": "node scripts/ci/verify-csp.js",
    "lint": "npm run check:policy && eslint apps/web --max-warnings=0",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json",
    "ah:gate": "node scripts/anti_hallucination_gate.mjs --config anti_hallucination.config.json",
    "ah:gate:fix": "node scripts/anti_hallucination_gate.mjs --config anti_hallucination.config.json --fix",
    "test": "echo \"(no tests)\"",
    "db:status": "node scripts/db_migrate.mjs status",
    "db:migrate": "node scripts/db_migrate.mjs up",
    "headers:check": "node scripts/headers_check.mjs",
    "sec:osv": "osv-scanner -r .",
    "sec:gitleaks": "gitleaks detect --no-git --exit-code 1",
    "sec:semgrep": "semgrep scan --config p/ci --error",
    "sec:trivy": "trivy fs --exit-code 1 --severity HIGH,CRITICAL .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@next/mdx": "^16.0.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.3.1",
    "@types/react-dom": "^19.2.2",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "9.2.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-security": "^1.7.1",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "minimatch": "^10.0.3",
    "pg": "^8.16.3",
    "prettier": "3.3.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@plasmicapp/host": "^1.0.226",
    "@plasmicapp/loader-nextjs": "^1.0.441",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "aos": "^2.3.4",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "jotai": "^2.15.0",
    "next-auth": "^4.24.11",
    "next-mdx-remote": "^5.0.0",
    "react-hot-toast": "^2.6.0",
    "rehype-pretty-code": "^0.14.1",
    "swiper": "^12.0.3",
    "zod": "^4.1.5"
  }
}
