
// Prisma schema for EarlyBird (v1.0.1)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  orgId     String
  role      String   @default("MEMBER")
  createdAt DateTime @default(now())
}

model Org {
  id               String   @id @default(cuid())
  name             String
  plan             String   @default("Starter")
  samlMetadataXml  String?
  createdAt        DateTime @default(now())
}

model Invite {
  id        String   @id @default(cuid())
  orgId     String
  email     String
  role      String   @default("MEMBER")
  token     String   @unique
  accepted  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Assistant {
  id             String   @id @default(cuid())
  orgId          String
  name           String
  vertical       String
  voice          String
  language       String
  prompt         String
  guardrailsJson Json?
  createdAt      DateTime @default(now())
}

model FAQ {
  id        String   @id @default(cuid())
  orgId     String
  question  String
  answer    String
  createdAt DateTime @default(now())
}

model Booking {
  id                String   @id @default(cuid())
  orgId             String
  customerName      String
  customerEmail     String
  providerCalendarId String
  startISO          DateTime
  endISO            DateTime
  calendarStatus    String
  createdAt         DateTime @default(now())
}

model OrgAnalytics {
  orgId       String   @id
  callsTotal  Int      @default(0)
  minutesTotal Int     @default(0)
  revenueUsd  Float    @default(0)
  cogsUsd     Float    @default(0)
  updatedAt   DateTime @updatedAt
}

model CallQuality {
  id            String   @id @default(cuid())
  callId        String
  jitterMs      Float
  packetLossPct Float
  rttMs         Float
  createdAt     DateTime @default(now())
}
